name: Build Zombie Monkeys AAB

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4 # Aktualisiert auf v4
    
    - name: Set up Python
      uses: actions/setup-python@v5 # Aktualisiert auf v5
      with:
        python-version: '3.10'
    
    - name: Build with Buildozer
      uses: ArtemSBulgakov/buildozer-action@v1
      id: buildozer
      with:
        command: buildozer android release
        buildozer_version: stable
    
    - name: Upload AAB
      uses: actions/upload-artifact@v4 # HIER war der Fehler: Ge√§ndert auf v4
      with:
        name: ZombieMonkeys-AAB
        path: bin/*.aab
