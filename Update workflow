.github/workflows/android_zombie.yml
name: Build Zombie Monkeys AAB

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v3
    
    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.10'
    
    - name: Build with Buildozer
      uses: ArtemSBulgakov/buildozer-action@v1
      id: buildozer
      with:
        # 'release' erzeugt das AAB-Format
        command: buildozer android release
        buildozer_version: stable
    
    - name: Upload AAB
      uses: actions/upload-artifact@v3
      with:
        name: ZombieMonkeys-AAB-File
        # Sucht im bin-Ordner nach der fertigen .aab Datei
        path: bin/*.aab
